<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="130dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="6dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/pen"
            />
        <TextView
        android:id="@+id/list_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="课程号：" />

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/kc"
            android:layout_below="@id/image_1"
            />
        <TextView
            android:id="@+id/list_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_1"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/image_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"

            android:text="课程名："/>

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/xufen"
            android:layout_below="@+id/image_2"
            />
        <TextView
            android:id="@+id/list_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学分："
            android:textColor="#000000"
            android:layout_toRightOf="@id/image_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/list_2"/>
        <ImageView
            android:id="@+id/image_4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/fangshi"
            android:layout_below="@+id/image_3"
            />
        <TextView
            android:id="@+id/list_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_3"
            android:layout_toRightOf="@+id/image_3"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:text="选课："/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
   <TextView
       android:id="@+id/list_5"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:text="分数"
       android:textSize="30sp"/>

    </RelativeLayout>

</LinearLayout>